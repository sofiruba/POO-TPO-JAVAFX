            <!-- Confirmar Contrase침a -->
            <PasswordField fx:id="confirmPasswordField" promptText="Confirmar contrase침a" style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;" />
            
            <!-- Label de mensaje -->
            <Label fx:id="messageLabel" visible="false" wrapText="true" />
            
            <!-- Bot칩n Registrarse -->
            <Button fx:id="registerButton" maxWidth="Infinity" onAction="#handleRegister" styleClass="primary-button" text="Registrarse">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            
            <!-- Bot칩n Volver -->
            <Button fx:id="backButton" maxWidth="Infinity" onAction="#handleBack" styleClass="secondary-button" text="Volver al Login">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
