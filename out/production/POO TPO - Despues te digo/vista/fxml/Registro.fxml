                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
            
            <!-- Subt칤tulo -->
            <Label style="-fx-text-fill: #666666;" text="Reg칤strate como alumno">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            
            <!-- Campo Nombre -->
            <TextField fx:id="nombreField" promptText="Nombre completo" style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;" />
            
            <!-- Campo Email -->
            <TextField fx:id="emailField" promptText="Email" style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;" />
            
            <!-- Campo Contrase침a -->
